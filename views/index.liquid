{% render 'partials/head.liquid', title: 'Squad page' %}

<h1>Verjaardagen</h1>

{% assign maanden = "Januari,Februari,Maart,April,Mei,Juni,Juli,Augustus,September,Oktober,November,December" | split: "," %}

<div>
  {% for maand in (1..12) %}
    <a href="/maand/{{ maand }}" class="button">
      {{ maanden[forloop.index0] }} 
    </a>
  {% endfor %}
</div>

<h2>Students</h2>

<ul class="person-list invisible">

  {% for person in persons %}
    {% if person.avatar != blank %}

      <li class="person">
        <a href="/student/{{ person.id }}">
          <h3>{{ person.name }}</h3>
          <img src="{{ person.avatar }}" alt="avatar foto">
          <p>{{ person.birthdate }}</p>
        </a>
      </li>

    {% endif %}
  {% endfor %}
  
</ul>


{% render 'partials/foot.liquid', squads: squads %}
