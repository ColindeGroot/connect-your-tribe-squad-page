{% render 'partials/head.liquid', title: 'Squad page' %}
{% assign vorigeMaand = huidigeMaand | minus: 1 %}
{% assign volgendeMaand = huidigeMaand | plus: 1 %}

{% if vorigeMaand > 0 %}
  <a href="/maand/{{ vorigeMaand }}" class="btn">← {{ maanden[vorigeMaand | minus: 1] }}</a>
{% endif %}

{% if volgendeMaand < 13 %}
  <a href="/maand/{{ volgendeMaand }}" class="btn">{{ maanden[volgendeMaand | plus: 1] }} →</a>
{% endif %}

<h2>Students</h2>

<ul class="person-list-maand">

{% for person in persons %}
{% if person.avatar != blank %}

<li class="person">
  <a href="/student/{{ person.id }}">
    <img src="{{ person.avatar }}" alt="avatar foto">
    <div class="person-details">
      <h3>{{ person.name }}</h3>
      <p>{{ person.birthdate }}</p>
    </div>
  </a>
</li>

{% endif %}
{% endfor %}

</ul>
{% comment %} {% render 'partials/foot.liquid', squads: squads %}  {% endcomment %}